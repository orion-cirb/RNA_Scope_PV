<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
		http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
        
	<groupId>cirb</groupId>
	<artifactId>mRNA_Scope_PV</artifactId>
	<version>1.00</version>
        <packaging>jar</packaging>
	<name>plugins/mRNA_Scope_PV.jar</name>
	<description>
            Find PV, Otx2, PNN and mRNA PV cells 
            Finf intensity in cells
        </description>

	<developers>
		<developer>
			<id>phm</id>
			<name>Philippe Mailly</name>
			<email>philippe.mailly@college-de-france.fr</email>
			<url></url>
			<organization>CIRB, Coll√®ge de France</organization>
			<roles>
				<role>developer</role>
			</roles>
			<timezone>-1</timezone>
		</developer>
	</developers>

        <scm>
            <connection>scm:git:git://github.com/imagej/mRNA_Scope_PV.jar</connection>
            <developerConnection>scm:git:git@github.com:imagej/mRNA_Scope_PV.jar</developerConnection>
            <tag>HEAD</tag>
            <url>https://github.com/pmailly/RNA_Scope_PV.jar</url>
	</scm>
        
	<properties>
                <imagej.app.directory>/opt/Fiji.app/</imagej.app.directory>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<main-class>mRNA_Scope_PV.jar</main-class>
	</properties>

	<dependencies>
		<dependency>
			<groupId>net.imagej</groupId>
			<artifactId>ij</artifactId>
                        <version>1.53a</version>
                        <type>jar</type>
		</dependency>
                <dependency>
                        <groupId>ome</groupId>
                        <artifactId>bioformats_package</artifactId>
                        <version>6.5.0</version>
                </dependency>
                <dependency>
			<groupId>com.github.mcib3d</groupId>
			<artifactId>mcib3d-core</artifactId>
			<version>3.96.3</version>
		</dependency>
                <dependency>
                        <groupId>ome</groupId>
                        <artifactId>formats-common</artifactId>
                        <version>5.2.5-SNAPSHOT</version>
                        <type>jar</type>
                 </dependency>
                 <dependency>
                        <groupId>ome</groupId>
                        <artifactId>formats-api</artifactId>
                        <version>6.5.0</version>
                        <type>jar</type>
                 </dependency>
	 <dependency>
	  <groupId>mpicbg</groupId>
	  <artifactId>mpicbg</artifactId>
	  <version>20120621</version>
	  <type>jar</type>
	 </dependency>
	 <dependency>
	  <groupId>sc.fiji</groupId>
	  <artifactId>fiji-lib</artifactId>
	  <version>2.1.3-SNAPSHOT</version>
	  <type>jar</type>
	 </dependency>
	</dependencies>
        <repositories>
            <repository>
		<id>imagej.public</id>
		<url>http://maven.imagej.net/content/groups/public</url>
            </repository>
            <repository>
                <id>ome</id>
                <name>Bio-Formats Repo</name>
                <url>http://artifacts.openmicroscopy.org/artifactory/maven</url>
            </repository>
            <repository>
                <id>jitpack.io</id>
                <url>https://jitpack.io</url>
            </repository>
        </repositories>
	<build>
            <plugins>
		<plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>2.3.2</version>
                    <configuration>
                        <showDeprecation>true</showDeprecation>
                        <source>1.8</source>
                        <target>1.8</target>
                    </configuration>
		</plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>copytoplugins</id>
                            <phase>install</phase>
                            <goals>
                                <goal>run</goal>
                            </goals>
                            <configuration>
                                <tasks>
                                    <copy todir="${imagej.app.directory}/plugins/CIRB" file="target/${project.build.finalName}.jar"/>
                                </tasks>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
	</build>

</project>
